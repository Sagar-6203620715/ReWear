{
  "name": "rewear-backend",
  "version": "1.0.0",
  "description": "Backend API for ReWear - Community Clothing Exchange application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seeder.js",
    "make-admin": "node makeAdmin.js",
    "lint": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy-check": "node deploy-check.js",
    "clean": "rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "mongoose",
    "api",
    "clothing",
    "sustainable-fashion",
    "clothing-exchange"
  ],
  "author": "ReWear Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "multer": "^2.0.1",
    "socket.io": "^4.8.1",
    "streamifier": "^0.1.1",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "eslint": "^9.25.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "@types/jest": "^29.5.12"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
